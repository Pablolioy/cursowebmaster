<div>
    <h1>Videojuegos</h1>
    <div class="lista-juego">
    {{#each videojuegos}}
        <div class="juego">
            <a href="videojuegos/{{id}}"><img src="images/juegos/{{id}}.png" alt="{{nombre}}"></a>
            <div class="juego-cont">
                <a href="videojuegos/{{id}}"><h2>{{nombre}}</h2></a>
                <h3>Fecha de lanzamiento: {{date fecha_lanzamiento "DD/MM/YYYY"}}</h3>
                <h3>{{descripcion}}</h3>
            </div>
        </div>
    {{/each}}
    </div>
</div>