
<div class="">
    <div id="listado_nov">
        <h2 class="col-10">Listado Galeria</h2>
        <form action="/admin/galeria/agregar" method="post">
            <button class="pushy__btn  pushy__btn--green h-w-auto" type="submit"><i class="fa-solid fa-plus"></i>Agregar</button>
        </form>
    </div>
    <table>
        <thead>
            <tr id="cabezera">
                <th class="col-1">Id</th>
                <th class="col-3 desc">Imagen</th>
                <th class="col-4 desc">Descripcion</th>
                <th class="col-2 desc">Acciones</th>
            </tr>
        </thead>
        <tbody>
            {{#each galeria}}
            <tr>
                <td class="col-1 wrap" data-label="id">{{id}}</td>
                <td class="col-3 wrap" data-label="imagen"><img src="/images/galeria/{{id}}.jpg" alt=""></td>
                <td class="col-4 wrap" data-label="descripcion">{{descripcion}}</td>
                <td class="col-2 acciones" data-label="acciones">
                    <a href="/admin/galeria/modificar/{{id}}" title="Editar"><button
                            class="pushy__btn pushy__btn--sm pushy__btn--blue"><i
                                class="fa-solid fa-pen-to-square"></i></button></a>
                    <a href="/admin/galeria/eliminar/{{id}}" title="Eliminar"><button
                            class="pushy__btn pushy__btn--sm pushy__btn--blue"><i
                                class="fa-solid fa-trash"></i></button></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

</div>